{% extends "_layout" %}

{% block content %}


	{% include '_snippet/_nav/_main' %}

<!-- Our Work Section -->
<div id="work" class="page">
	<div class="container">
    	<!-- Title Page -->
        <div class="row">
            <div class="span12">
                <div class="title-page">
                    <h2 class="title">{{ entry.title }}</h2>
                </div>
            </div>
        </div>
        <!-- End Title Page -->
        
        <!-- Portfolio Projects -->
        <div class="row">
        	<div class="span3">
            	<!-- Filter -->
                <nav id="options" class="work-nav">
                    <ul id="filters" class="option-set" data-option-key="filter">
                    	<li class="type-work">Filter</li>
                        <li><a href="#filter" data-option-value="*" class="selected">All Projects</a></li>
                        {% for filter in craft.categories.group("services") %}
                        <li><a href="#filter" data-option-value=".{{ filter.slug }}">{{ filter.title }}</a></li>
                        {% endfor %}
                    </ul>
                </nav>
                <!-- End Filter -->
            </div>
            
            <div class="span9">
            	<div class="row">
                	<section id="projects">
                    	<ul id="thumbs">
                        
                        	{% for item in craft.entries.section('media') %}
							<!-- Item Project and Filter Name -->
                        	<li class="item-thumbs span3 {{ item.imageType|length ? item.imageType.first().slug : 'none' }}">
                            	<!-- Fancybox - Gallery Enabled - Title - Full Image -->
                            	<a class="hover-wrap fancybox" data-fancybox-group="gallery" title="{{ item.title }}" href="{{ siteUrl }}{{ item.image.first().getUrl() }}">
                                	<span class="overlay-img"></span>
                                    <span class="overlay-img-thumb font-icon-resize-full"></span>
                                </a>
                                <!-- Thumb Image and Description -->
                                <img src="{{ siteUrl }}{{ item.image.first().getUrl('mediaImage') }}"
                                alt="{{ item.imageType|length ? item.imageType.first().title }}">
                            </li>
                        	<!-- End Item Project -->
                        	{% endfor %}

                        </ul>
                    </section>
                    
            	</div>
            </div>
        </div>
        <!-- End Portfolio Projects -->
    </div>
</div>
<!-- End Our Work Section -->

	{% include '_snippet/_global/_footer' %}

{% endblock %}